@model WebApplication5.Models.Puesto
<script src="https://ajax.googleapis.com/ajax/libs/d3js/5.7.0/d3.min.js"></script>
<link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/smoothness/jquery-ui.css">
<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>

<h2>
    Agregar Nuevo Puesto
</h2>
<hr />

<br />
CodDepartamento: @Html.DropDownList("CodDepartamento", null, htmlAttributes: new { @class = "form-control" })
<br />
Descripcion: @Html.EditorFor(model => model.Descripcion)

<p>
    <input type="button" class="btn btn-primary" value="Guardar" onclick="Guardarpue()" />
</p>





<script type="text/javascript">
    function Guardarpue() {

        var CodDepartamento = $("#CodDepartamento").val();
        var Descripcion = $("#Descripcion").val();

        var InsertarDep = { "CodDepartamento": CodDepartamento, "Descripcion": Descripcion }

        $.post('/Puesto/Create', InsertarDep,
            function (data) { if (data == 0) { location.href; } }, 'json');
        alert("Los datos se Insertarion !");
    }
</script>
